---
// AdvertisementGrid.astro
---

<section class="relative">
    <div class="flex items-center mt-4">
        <h1
            class="relative z-10 text-2xl sm:text-3xl font-bold bg-white px-6 py-2 text-gray-900"
        >
            ÃšLTIMOS ANUNCIOS
        </h1>
        <span class="h-px flex-1 bg-black"></span>
    </div>
    <div
        class="relative w-full min-h-[200px] sm:min-h-[250px] md:min-h-[300px] lg:min-h-[350px] xl:min-h-[400px] 2xl:min-h-[415px] overflow-hidden
        bg-gradient-to-r
        from-pink-500
        via-red-500
        to-yellow-500
        background-animate"
    >
        <img
            src="/assets/images/banner.png"
            alt="Newsletter Background"
            class="absolute inset-0 w-full h-full object-contain py-8"
            loading="lazy"
        />
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-4 mt-4">
        {
            [1, 2, 3, 4].map((num) => (
                <div class="group block relative overflow-hidden">
                    <img
                        src={`/assets/images/anuncio_${num}.jpg`}
                        alt={`Anuncio ${num}`}
                        class="object-cover w-full h-full transition-transform duration-300 ease-in-out transform group-hover:scale-105"
                    />
                </div>
            ))
        }
    </div>
    <div class="flex items-center mb-2 mt-8">
        <span class="h-px flex-1 bg-black"></span>
    </div>
</section>
<style>
    .background-animate {
        background-size: 400%;

        -webkit-animation: AnimationName 3s ease infinite;
        -moz-animation: AnimationName 3s ease infinite;
        animation: AnimationName 3s ease infinite;
    }

    @keyframes AnimationName {
        0%,
        100% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
    }
</style>
